{
  "name": "Direxio",
  "description": "Making public transit more comfortable.
      You can get public transit directions from your current location,
      see a map of the route and get notifications for when to leave the house",
  "launch_path": "/direxio/index.html",
  "appcache_path": "/direxio/cache.manifest",
  "icons": {
    "128": "/direxio/img/icon.png"
  },
  "version": "0.0.1beta",
  "developer": {
    "name": "Martin Naumann",
    "url": "http://www.geekonaut.de"
  },
  "default_locale": "en",
  "permissions": {
    "desktop-notification": {
      "description": "Notify the user when to leave to get to his connection in time"
    },
    "geolocation": {
      "description": "Allows to get directions starting from the current position"
    }  
  }
}